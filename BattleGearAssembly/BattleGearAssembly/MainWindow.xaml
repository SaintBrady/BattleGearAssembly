            <Label Content="Region" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
            <ComboBox Name="RegionCB" SelectionChanged="LoadRealms" IsEditable="True" Text="US" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top" Width="120" Height="20">
                <ComboBoxItem Content="US"></ComboBoxItem>
                <ComboBoxItem Content="EU"></ComboBoxItem>
                <ComboBoxItem Content="KR"></ComboBoxItem>
                <ComboBoxItem Content="TW"></ComboBoxItem>
